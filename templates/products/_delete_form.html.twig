<form method="post" action="{{ path('products_delete', {'prod_id': product.prod_id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.prod_id) }}">
    <button class="btn">Delete</button>
</form>

{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}

{% block body %}
    <h1>Products index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Prix HT</th>
            <th>Affiché </th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}

            {% if product.getProdDisplay() == 1 %}
                <tr>
                    <td><img src="{{ asset('images/vinylfilrouge/' ~ product.Photo.getPhotoId() ~ '.' ~ product.Photo.getPhotoFormat())}}" class="cover"></td>
                    <td>{{ product.prodName }}</td>
                    <td>{{ product.getProdDescr() }}</td>
                    <td>{{ product.getProdPrice() }}€</td>
                    <td>{{ product.getProdDisplay() ? 'Oui' : 'Non' }}</td>
                    {% if product.getProdStock() == 0 %}
                        <td>Produit Indisponible</td>
                    {% else %}
                        <td>{{ product.getProdStock() }}</td>
                    {% endif %}
                    <td>
                        <a href="{{ path('products_show', {'prod_id': product.getId()}) }}">Voir<i class="fas fa-eye"></i></a>&nbsp;&nbsp;
                        {% if product.getProdStock() == 0 %}
                    <td></td>
                {% else %}
                    <a href="{{ path('cart_add', {'id' : product.getId()}) }}">Panier<i class="fas fa-edit"></i></a>
                    {% endif %}
                    </td>
                </tr>
            {% else %}
            {% endif %}
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('products_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}

{% block body %}
    <h1>Products index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Prix HT</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}

            {% if product.prodDisplay == 1 %}
                <tr>
                    <td><img src="{{ asset('images/vinylfilrouge/' ~ product.Photo.photoId ~ '.' ~ product.Photo.photoFormat)}}" class="cover"></td>
                    <td>{{ product.prodName }}</td>
                    <td>{{ product.prodDescr }}</td>
                    <td>{{ product.prodPrice }}â‚¬</td>
                    {% if product.prodStock == 0 %}
                        <td>Produit Indisponible</td>
                    {% else %}
                        <td>{{ product.prodStock }}</td>
                    {% endif %}
                    <td>
                        <a href="{{ path('products_show', {'prod_id': product.getId()}) }}"><i class="fas fa-eye"></i></a>&nbsp;&nbsp;
                        {% if product.prodStock == 0 %}
                    <td></td>
                {% else %}
                    <a href="{{ path('cart_add', {'id' : product.getId()}) }}"><i class="fas fa-cart-plus"></i></a>
                    {% endif %}
                    </td>
                </tr>
            {% else %}
            {% endif %}
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

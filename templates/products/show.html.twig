{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Photo</th>
                <td><img src="{{ asset('images/vinylfilrouge/' ~ product.Photo.photoId ~ '.' ~ product.Photo.photoFormat)}}" class="cover"></td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.getProdName() }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.getProdDescr() }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.getProdPrice() }}</td>
            </tr>
            <tr>
                <th>Stock restant</th>
                <td>{{ product.getProdStock() }}</td>
            </tr>
        </tbody>
    </table>

    <table>
        <thead>
                <tr>
                    <td>Non</td>
                    <td>Note</td>
                    <td>Commantaire</td>
                </tr>
        </thead>
        <tbody>

        </tbody>
    </table>

    <a href="{{ path('home') }}">back to list</a>

    <a href="{{ path('products_edit', {'prod_id': product.getId()}) }}">edit</a>

    {{ include('products/_delete_form.html.twig') }}
{% endblock %}

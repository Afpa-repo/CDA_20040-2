{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Photo</th>
                <td><img src="{{ asset('images/vinylfilrouge/' ~ product.Photo.photoId ~ '.' ~ product.Photo.photoFormat)}}" class="cover"></td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.prodName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.prodDescr }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.prodPrice }}</td>
            </tr>
            <tr>
                <th>Stock restant</th>
                <td>{{ product.prodStock }}</td>
            </tr>
        </tbody>
    </table>
<hr>
    <table class="table">
        <legend>Avis des clients</legend>
        <thead>
                <tr>
                    <th>Note</th>
                    <th>Commentaire</th>
                </tr>
        </thead>
        <tbody>
        {% for commentary in product.getCommentaries() %}
        <tr>
            <td> {{ commentary.commNote }}</td>
            <td>{{ commentary.commComment }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('products') }}">back to list</a>



{% endblock %}
